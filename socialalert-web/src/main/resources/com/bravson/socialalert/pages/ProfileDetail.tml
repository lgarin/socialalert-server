<html t:type="layout"
	xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd"
	xmlns:p="tapestry:parameter">

	<div class="well">
		<h1>${info.nickname}</h1>
	</div>
	<div class="container-fluid">
		<div class="row-fluid">
			<div class="span3">
				<table>
					<tr>
						<td width="100px">Pics</td>
						<td><span class="label label-warning">${statistic.pictureCount}</span></td>
					</tr>
					<tr>
						<td>Visits</td>
						<td><span class="label label-success">${statistic.hitCount}</span></td>
					</tr>
					<tr>
						<td>Likes</td>
						<td><span class="label label-default">${statistic.likeCount}</span></td>
					</tr>
					<tr>
						<td>Comments</td>
						<td><span class="label label-info">${statistic.commentCount}</span></td>
					</tr>
					<tr>
						<td>Followers</td>
						<td><span class="label label-error">${statistic.followerCount}</span></td>
					</tr>
					<tr>
						<td>Biography</td>
						<td>${info.biography}</td>
					</tr>
				</table>
				<p class="text-center">
					<t:if test="followed" negate="true">
						<t:eventlink t:id="follow"><i class="icon-thumbs-up"></i> Follow</t:eventlink>
					</t:if>
					<t:if test="followed">
                    	<t:eventlink t:id="unfollow"><i class="icon-thumbs-down"></i> Stop follow</t:eventlink>
                    </t:if>
				</p>
				<img src="${previewUrl}/${info.image}" />
			</div>
		</div>
	</div> <!-- container-fluid -->
	
	<t:createComment/>
</html>
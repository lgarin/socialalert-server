<html t:type="layout"
      xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd"
      xmlns:p="tapestry:parameter">

	<t:profilePager t:pageNumber="pageNumber" t:result="searchResult" t:title="Profiles"/>
	
	<t:form t:id="search" class="form-inline">
		<t:errors/>
	    <fieldset class="span3">
	        <legend>Nickname search</legend>
	        <div class="controls-row">
            	<div class="control-group span12">
	        		<label>Nickname</label><t:textfield class="span12" t:id="nickname" name="nickname"  t:mixins="jquery/Autocomplete" t:minChars="3"/>
	        	</div>
	        </div>
	        <div class="controls-row">
	       	 	<div class="control-group span6">
         			<t:linksubmit class="btn btn-primary">Search</t:linksubmit>
         		</div>
         		<div class="control-group span6">
         			<t:eventlink t:id="clear" class="btn btn-success">Clear</t:eventlink>
         		</div>
       		 </div>
       		 
	    </fieldset>
	</t:form>
</html>
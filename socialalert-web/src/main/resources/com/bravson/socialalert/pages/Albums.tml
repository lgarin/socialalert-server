<html t:type="layout"
      xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd"
      xmlns:p="tapestry:parameter">

	
	<t:listAlbums t:profileId="userInfo.profileId"/>
	
	<t:form t:id="createForm">
		<fieldset class="span2">
			<div id="legend">
				<legend class="">Create album</legend>
			</div>

			<t:errors />
			<div class="control-group">
				<label class="control-label" for="title">Title</label>
				<div class="controls">
					<t:textfield t:id="title" name="title" class="input-xlarge" />
				</div>
			</div>
			<div class="control-group">
				<label class="control-label" for="description">Description</label>
				<div class="controls">
					<t:textarea t:id="description" name="description" class="input-xlarge" />
				</div>
			</div>
			
			<div class="control-group">
				<div class="controls">
					<t:linksubmit class="btn btn-success">Create</t:linksubmit>
				</div>
			</div>
		</fieldset>
	</t:form>
</html>